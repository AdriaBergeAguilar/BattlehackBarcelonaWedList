<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/item_gift_image_gift"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_gift_default_min"/>

    <View
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/shape_image_simple"/>

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/item_gift_image_user"
        android:src="@drawable/ic_person_default"
        android:layout_gravity="left|top"
        android:layout_margin="16dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/item_gift_name"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/item_gift_price"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="center_horizontal|bottom" />
    </LinearLayout>
</FrameLayout>